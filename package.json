{
  "name": "monod",
  "version": "1.0.0",
  "author": "TailorDev SAS",
  "license": "MIT",
  "description": "TailorDev Markdown Editor",
  "main": "index.js",
  "scripts": {
    "build": "NODE_ENV=production webpack -p",
    "stats": "npm run build -- --profile --json > stats.json",
    "dev": "webpack-dev-server",
    "lint": "eslint app/ --ext .js --ext .jsx",
    "lint:fix": "npm run lint -- --fix",
    "test": "mocha --compilers jsx?:babel-register --require lib/jsdom-setup.js --require lib/css-null-compiler.js app/**/*-test.js",
    "test:watch": "npm run test -- --watch --reporter min",
    "test:ci": "npm run test -- --reporter mocha-circleci-reporter",
    "postinstall": "npm run build",
    "start": "NODE_ENV=production node app/server.js",
    "cov": "nyc --extension .jsx npm run test"
  },
  "devDependencies": {
    "babel-core": "^6.6.4",
    "babel-loader": "^6.2.4",
    "babel-preset-airbnb": "^1.1.1",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-hmre": "^1.1.0",
    "babel-register": "^6.6.5",
    "chai": "^3.5.0",
    "clean-webpack-plugin": "^0.1.8",
    "css-loader": "^0.23.1",
    "enzyme": "^2.0.0",
    "eslint": "^2.2.0",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-react": "^4.1.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "html-webpack-plugin": "^2.9.0",
    "html-webpack-template": "^4.0.0",
    "jsdom": "^8.1.0",
    "json-loader": "^0.5.4",
    "localforage": "^1.4.0",
    "lodash.debounce": "^4.0.3",
    "lodash.isequal": "^4.1.1",
    "markdown-it": "^6.0.0",
    "mocha": "^2.4.5",
    "mocha-circleci-reporter": "0.0.1",
    "node-sass": "^3.4.2",
    "nyc": "^6.0.0",
    "offline-plugin": "^2.0.4",
    "react-addons-test-utils": "^0.14.7",
    "sass-loader": "^3.1.2",
    "sinon": "^1.17.3",
    "style-loader": "^0.13.0",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1",
    "webpack-merge": "^0.8.3",
    "codemirror": "^5.12.0",
    "font-awesome": "^4.5.0",
    "foundation-sites": "^6.2.0",
    "highlight.js": "^9.2.0",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-loader": "^2.1.0",
    "sanitize-html": "^1.11.3",
    "emojione": "^2.1.2"
  },
  "dependencies": {
    "express": "^4.13.4",
    "compression": "^1.6.1"
  },
  "engines": {
    "node": "^5.7"
  },
  "nyc": {
    "exclude": [
      "app/**/*-test.js",
      "lib"
    ]
  }
}
